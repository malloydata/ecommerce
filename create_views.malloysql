CREATE OR REPLACE VIEW ecommerice_views.active_users_daily_v AS
(%{
    active_users_daily is user_day_facts -> {
        group_by:
            the_date

        aggregate:
            num_active is sum(is_active)
            pct_active is sum(is_active) / count()

        order_by:
            the_date
        }
%})
